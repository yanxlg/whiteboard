{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "rules":{
    "no-unused-expression": false,
    "no-unused-variable": false,
    "forin": false,
    "no-console": false,
    "object-literal-shorthand": false,
    "variable-name": ["allow-snake-case"],
    "no-var-requires": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  }
}
